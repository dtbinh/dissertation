<div class="clickableCell">

    <h2 data-bind="visible: viewHMDOffUni" >Slave Streams</h2>
    <h2 data-bind="visible: viewHMDOffBiDir" >Slave - Bidirectional Stream</h2>

    <!-- Same div for Videos -->
    <div id="remoteVideosContainer" data-bind="visible: !viewOptionsIsOn()"></div>


    <!-- View for stream Unidirectional -->
    <div data-bind="visible: viewHMDOffUni">
        <table>
            <thead>
            <tr>
                <th>Stream</th>
                <th>Camera</th>
                <th>Controls</th>
            </tr>
            </thead>
            <tbody data-bind="foreach: streams" >
            <tr data-bind="visible: ($index() < 1)">
                <td>
                    <a data-bind="text: name"></a>
                </td>
                <td data-bind="css: { selected: isPlaying() }, click: $root.toggleRemoteVideo">
                    <a>View</a>
                </td>
                <td data-bind="css: { selected: isPlaying() }">
                    <input type="text" value="press WASD to move" data-bind="event:{ keypress: $root.sendMsgProtocol}" />
                </td>
            </tr>
            </tbody>
        </table>
        <li data-bind="click: refresh" style="width: 240px">
            <a href="#">refresh</a>
        </li>
        </br></br>
        <a>Use WASD to move the droid</a>
    </div>




    <!-- View for stream Bidirectional -->
    <div data-bind="visible: viewHMDOffBiDir">
        <table>
            <thead>
            <tr>
                <th>Stream</th>
                <th>Camera</th>
                <th>Controls</th>
            </tr>
            </thead>
            <tbody data-bind="foreach: streams">
            <tr>
                <td>
                    <a data-bind="text: name"></a>
                </td>
                <td data-bind="css: { selected: isPlaying() }, click: $root.answerCall">
                    <a>View</a>
                </td>
                <td data-bind="css: { selected: isPlaying() }, visible: ($index() < 1)"> <!-- Controls only in Slave 1 (Brain) -->
                    <input type="text" value="press WASD to move" data-bind="event:{ keypress: $root.sendMsgProtocol}" />
                </td>
            </tr>
            </tbody>
        </table>

        <li data-bind="click: refresh" style="width: 240px">
            <a href="#">refresh</a>
        </li>
        </br></br>
        <a>Use WASD to move the droid</a>

        <div class="localCam">

            <h2>Master Camera</h2>
            <video id="localVideo" muted="muted" ></video>
            <li data-bind="click: toggleLocalVideo">
                <a href="#" data-bind="text: localCamButtonText"></a>
            </li>

            <div data-bind="visible: isStreaming">

                <p>Streaming local camera</p>

                </br>
            </div>
        </div>
    </div>

</div>